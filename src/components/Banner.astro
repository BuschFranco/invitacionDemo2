<style>
    .banner {
        width: 100%;
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-light);
        text-align: center;
        overflow: hidden;
    }

    .banner-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, 
            var(--color-primary) 0%, 
            var(--color-secondary) 50%, 
            var(--color-accent) 100%);
        z-index: 0;
    }

    .animated-bg {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .floating-element {
        position: absolute;
        font-size: 2rem;
        opacity: 0.8;
        pointer-events: none;
        z-index: 1;
    }

    .element-1 { 
        top: 20%; left: 10%; 
        animation: floatSoft 4s ease-in-out infinite;
        animation-delay: 0s; 
    }
    .element-2 { 
        top: 60%; left: 80%; 
        animation: floatBounce 5s ease-in-out infinite;
        animation-delay: 1s; 
    }
    .element-3 { 
        top: 30%; left: 70%; 
        animation: floatRotate 6s ease-in-out infinite;
        animation-delay: 2s; 
    }
    .element-4 { 
        top: 80%; left: 20%; 
        animation: floatPulse 4.5s ease-in-out infinite;
        animation-delay: 3s; 
    }
    .element-5 { 
        top: 10%; left: 60%; 
        animation: floatWave 5.5s ease-in-out infinite;
        animation-delay: 4s; 
    }
    .element-6 { 
        top: 70%; left: 40%; 
        animation: floatGlow 6.5s ease-in-out infinite;
        animation-delay: 5s; 
    }

    .banner-overlay {
        background: rgba(0, 0, 0, 0.1);
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: var(--spacing-xl);
        position: relative;
        z-index: 2;
    }

    .banner-content {
        max-width: 800px;
        width: 100%;
    }

    .crown-decoration {
        margin-bottom: 2rem;
    }

    .crown {
        font-size: 4rem;
        animation: crownPulse 2s ease-in-out infinite;
        filter: drop-shadow(0 0 20px rgba(255, 215, 0, 0.5));
    }

    .name-container {
        margin-bottom: 2rem;
    }

    .banner-title {
        font-size: 4rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.8);
        color: var(--color-text-light);
    }

    .celebration-text {
        margin-bottom: 2rem;
    }

    .banner-subtitle {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-style: italic;
        color: var(--color-text-light);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .age-highlight {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin: 1rem 0;
    }

    .age-number {
        font-size: 5rem;
        font-weight: 900;
        background: linear-gradient(45deg, #FFD700, #FF69B4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(255, 215, 0, 0.5);
        animation: numberGlow 2s ease-in-out infinite alternate;
    }

    .age-text {
        font-size: 2rem;
        font-weight: 300;
        color: var(--color-text-light);
    }

    .banner-date-modern {
        margin-bottom: 3rem;
    }

    .date-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .day {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--color-accent);
    }

    .month {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--color-text-light);
    }

    .year {
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--color-text-light);
    }

    .banner-scroll-indicator {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        animation: scrollBounce 2.5s ease-in-out infinite;
    }

    .scroll-arrow {
        width: 20px;
        height: 20px;
        border-right: 2px solid var(--color-text-light);
        border-bottom: 2px solid var(--color-text-light);
        transform: rotate(45deg);
        transition: all 0.3s ease;
    }

    .banner-scroll-indicator span {
        font-size: 0.9rem;
        color: var(--color-text-light);
        opacity: 0.8;
    }

    /* Animaciones suaves para emojis flotantes */
    @keyframes floatSoft {
        0%, 100% { transform: translateY(0px) scale(1); }
        50% { transform: translateY(-15px) scale(1.05); }
    }

    @keyframes floatBounce {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        25% { transform: translateY(-10px) rotate(5deg); }
        50% { transform: translateY(-20px) rotate(0deg); }
        75% { transform: translateY(-10px) rotate(-5deg); }
    }

    @keyframes floatRotate {
        0% { transform: translateY(0px) rotate(0deg) scale(1); }
        25% { transform: translateY(-8px) rotate(90deg) scale(1.1); }
        50% { transform: translateY(-15px) rotate(180deg) scale(1); }
        75% { transform: translateY(-8px) rotate(270deg) scale(1.1); }
        100% { transform: translateY(0px) rotate(360deg) scale(1); }
    }

    @keyframes floatPulse {
        0%, 100% { transform: translateY(0px) scale(1); opacity: 0.8; }
        50% { transform: translateY(-12px) scale(1.2); opacity: 1; }
    }

    @keyframes floatWave {
        0% { transform: translateY(0px) translateX(0px); }
        25% { transform: translateY(-10px) translateX(5px); }
        50% { transform: translateY(-20px) translateX(0px); }
        75% { transform: translateY(-10px) translateX(-5px); }
        100% { transform: translateY(0px) translateX(0px); }
    }

    @keyframes floatGlow {
        0%, 100% { 
            transform: translateY(0px) scale(1); 
            filter: drop-shadow(0 0 5px rgba(255, 182, 193, 0.5));
        }
        50% { 
            transform: translateY(-18px) scale(1.1); 
            filter: drop-shadow(0 0 15px rgba(255, 182, 193, 0.8));
        }
    }

    /* AnimaciÃ³n mejorada para la flecha de scroll */
    @keyframes scrollBounce {
        0%, 100% { transform: translateY(0px); opacity: 0.7; }
        25% { transform: translateY(-8px); opacity: 1; }
        50% { transform: translateY(-15px); opacity: 0.8; }
        75% { transform: translateY(-8px); opacity: 1; }
    }

    @keyframes crownPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }



    @keyframes numberGlow {
        0% { text-shadow: 0 0 30px rgba(255, 215, 0, 0.5); }
        100% { text-shadow: 0 0 50px rgba(255, 215, 0, 0.8), 0 0 70px rgba(255, 105, 180, 0.6); }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }

    @keyframes fadeInScale {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    @keyframes sparkleFloat {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(180deg);
        }
    }

    @keyframes crownBounce {
        0%, 100% {
            transform: translateY(0px) scale(1);
        }
        50% {
            transform: translateY(-10px) scale(1.1);
        }
    }

    @media (max-width: 768px) {
        .banner {
            height: 80vh;
        }

        .banner-video {
            /* En mÃ³viles, asegurar que el video cubra toda la pantalla */
            min-width: 120%;
            min-height: 120%;
        }

        .banner-title {
            font-size: var(--font-size-2xl);
        }

        .banner-names {
            font-size: var(--font-size-xl);
        }

        .banner-date {
            font-size: var(--font-size-lg);
        }
    }

    /* OptimizaciÃ³n para dispositivos con conexiÃ³n lenta */
    @media (prefers-reduced-motion: reduce) {
        .banner-video {
            animation-play-state: paused;
        }
    }

    /* Ajustes para pantallas muy pequeÃ±as */
    @media (max-width: 480px) {
        .banner {
            height: 70vh;
        }
        
        .banner-overlay {
            padding: var(--spacing-md);
        }
    }