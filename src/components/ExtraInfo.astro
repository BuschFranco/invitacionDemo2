<section class="section extra-info-section">
    <div class="container">
        <div class="info-cards">
            <!-- Dress Code -->
            <div class="info-card dress-code-card animate-slide-left">
                <div class="info-icon">
                    <i class="fas fa-tshirt"></i>
                </div>
                <h3>Dress Code</h3>
                <p>Elegante & Juvenil</p>
                <p class="info-description">Ven con tu mejor outfit para celebrar mis 15 años. ¡Que brillemos juntas!</p>
            </div>

            <!-- Playlist -->
            <div class="info-card playlist-card animate-fade-in">
                <div class="info-icon">
                    <i class="fas fa-music"></i>
                </div>
                <h3>Playlist</h3>
                <p>¡Ayúdame con la música!</p>
                <p class="info-description">Sugiere las canciones que no pueden faltar en mi fiesta de 15.</p>
                <button class="btn btn-primary" id="open-playlist-modal">
                    <i class="fas fa-plus"></i> Sugerir canción
                </button>
            </div>

            <!-- Regalos -->
            <div class="info-card gifts-card animate-slide-right">
                <div class="info-icon">
                    <i class="fas fa-gift"></i>
                </div>
                <h3>Regalos</h3>
                <p>Lista de Regalos</p>
                <p class="info-description">Si deseas hacerme un regalo, aquí tienes mis datos para colaborar con mi celebración.</p>
                <button class="btn btn-primary" id="open-gifts-modal">
                    <i class="fas fa-info-circle"></i> Ver datos bancarios
                </button>
            </div>
        </div>
    </div>

    <!-- Modal Playlist -->
    <div class="modal" id="playlist-modal">
        <div class="modal-content">
            <span class="close-modal" id="close-playlist-modal">&times;</span>
            <h3>Sugerir canción</h3>
            <form id="playlist-form">
                <div class="form-group">
                    <label for="song-name">Nombre de la canción</label>
                    <input type="text" id="song-name" name="song-name" required>
                </div>
                <div class="form-group">
                    <label for="artist">Artista</label>
                    <input type="text" id="artist" name="artist" required>
                </div>
                <button type="submit" class="btn btn-primary">Enviar sugerencia</button>
            </form>
        </div>
    </div>

    <!-- Modal Regalos -->
    <div class="modal" id="gifts-modal">
        <div class="modal-content">
            <span class="close-modal" id="close-gifts-modal">&times;</span>
            <h3>Datos Bancarios</h3>
            <div class="bank-details">
                <p><strong>Banco:</strong> Banco Ejemplo</p>
                <p><strong>Titular:</strong> Isabella Rodríguez</p>
                <p><strong>CBU:</strong> 0000000000000000000000</p>
                <p><strong>Alias:</strong> ISABELLA.QUINCE.2025</p>
            </div>
        </div>
    </div>
</section>

<style>
    .extra-info-section {
        background-color: var(--color-background);
        padding: var(--spacing-xl) 0;
    }

    .info-cards {
        display: flex;
        justify-content: center;
        gap: var(--spacing-lg);
        flex-wrap: wrap;
    }

    .info-card {
        background-color: var(--color-background);
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-lg);
        width: 100%;
        max-width: 300px;
        box-shadow: var(--shadow-md);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .dress-code-card {
        border-top: 4px solid var(--color-dress-code);
    }

    .playlist-card {
        border-top: 4px solid var(--color-playlist);
    }

    .gifts-card {
        border-top: 4px solid var(--color-primary);
    }

    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .info-icon {
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-text-dark);
    }

    .info-card h3 {
        font-size: var(--font-size-lg);
        margin-bottom: var(--spacing-sm);
        font-weight: 600;
    }

    .info-card p {
        font-weight: 600;
        margin-bottom: var(--spacing-sm);
    }

    .info-description {
        font-size: var(--font-size-sm);
        color: var(--color-text-dark);
        opacity: 0.8;
        margin-bottom: var(--spacing-md);
        font-weight: normal !important;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background-color: var(--color-background);
        padding: var(--spacing-lg);
        border-radius: var(--border-radius-lg);
        max-width: 500px;
        width: 90%;
        position: relative;
        box-shadow: var(--shadow-lg);
    }

    .close-modal {
        position: absolute;
        top: var(--spacing-sm);
        right: var(--spacing-md);
        font-size: var(--font-size-xl);
        cursor: pointer;
    }

    .bank-details {
        margin-top: var(--spacing-md);
    }

    .bank-details p {
        margin-bottom: var(--spacing-sm);
    }

    @media (max-width: 768px) {
        .info-cards {
            gap: var(--spacing-md);
        }

        .info-card {
            max-width: 100%;
            padding: var(--spacing-md);
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Playlist Modal
        const playlistModal = document.getElementById('playlist-modal');
        const openPlaylistModal = document.getElementById('open-playlist-modal');
        const closePlaylistModal = document.getElementById('close-playlist-modal');
        const playlistForm = document.getElementById('playlist-form');

        if (openPlaylistModal && playlistModal && closePlaylistModal) {
            openPlaylistModal.addEventListener('click', () => {
                playlistModal.style.display = 'flex';
            });

            closePlaylistModal.addEventListener('click', () => {
                playlistModal.style.display = 'none';
            });

            window.addEventListener('click', (e) => {
                if (e.target === playlistModal) {
                    playlistModal.style.display = 'none';
                }
            });
        }

        if (playlistForm) {
            playlistForm.addEventListener('submit', (e) => {
                e.preventDefault();
                // Aquí se podría agregar código para enviar los datos a un servidor
                alert('¡Gracias por tu sugerencia!');
                playlistModal.style.display = 'none';
                playlistForm.reset();
            });
        }

        // Gifts Modal
        const giftsModal = document.getElementById('gifts-modal');
        const openGiftsModal = document.getElementById('open-gifts-modal');
        const closeGiftsModal = document.getElementById('close-gifts-modal');

        if (openGiftsModal && giftsModal && closeGiftsModal) {
            openGiftsModal.addEventListener('click', () => {
                giftsModal.style.display = 'flex';
            });

            closeGiftsModal.addEventListener('click', () => {
                giftsModal.style.display = 'none';
            });

            window.addEventListener('click', (e) => {
                if (e.target === giftsModal) {
                    giftsModal.style.display = 'none';
                }
            });
        }
    });
</script>